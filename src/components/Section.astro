---
interface Props {
  name: string;
  title: string;
}

const { name, title } = Astro.props;
---

<section class="mb-12 w-full" data-name={name}>
  <article class="mb-4 py-4 md:px-10 sm:px-5">
    <h2 class="text-3xl font-bold mb-4">{title}</h2>

    <div class="flex flex-col justify-items-center">
      <slot />
    </div>
  </article>
</section>
