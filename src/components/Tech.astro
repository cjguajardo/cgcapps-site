---
import { Image } from 'astro:assets';
import { getBadge } from '@services/badges.ts';

interface Props {
  tech: string;
  size?: 'sm' | 'md' | 'lg';
}

const { tech, size } = Astro.props;
const badge = getBadge(tech);
const computedSize = size || 'md';
---

<span
  class:list={[
    'inline-block rounded-full py-1 text-gray-100 mr-2 mb-2',
    'bg-gray-200 dark:bg-gray-800',
    {
      'text-[9px] px-2': computedSize === 'sm',
      'text-sm px-3': computedSize === 'md',
      'text-base px-4': computedSize === 'lg',
    },
  ]}
>
  <img
    src={badge}
    alt={badge}
    class:list={[
      {
        'w-3 h-3': computedSize === 'sm',
        'w-4 h-4': computedSize === 'md',
        'w-5 h-5': computedSize === 'lg',
      },
      'inline-block mr-1',
    ]}
  />
  {tech}
</span>
