---
import { Image } from "astro:assets";
import Layout from "@layouts/NotFoundLayout.astro";
import notFoundImage from "@images/not_found.webp";
import Subtitle from "@components/Subtitle.astro";
import Section from "@components/Section.astro";
---

<Layout title="404 - Page Not Found">
    <Subtitle text="Oops! Looks like you've wandered off the map." />

    <Section name="page-not-found">
        <article class="mx-auto flex flex-col items-center z-10 max-w-2xl">
            <Image
                src={notFoundImage}
                alt="404 error illustration - page not found"
                class="h-[50vh] mt-12"
                loading="eager"
            />

            <div class="text-center my-8">
                <h2 class="text-2xl font-bold text-indigo-300 mb-4">
                    Page Not Found
                </h2>
                <p class="text-gray-400 text-base mb-4">
                    The page you're looking for doesn't exist or may have been
                    moved.
                </p>
                <p class="text-gray-500 text-sm mb-6">
                    Don't worry though, there's plenty to explore! Here are some
                    helpful links:
                </p>
            </div>

            <div class="flex flex-col sm:flex-row gap-4 w-full max-w-md mb-8">
                <a
                    href="/"
                    class="text-center bg-indigo-500 hover:bg-indigo-600 active:bg-indigo-700 text-white font-bold py-3 px-6 rounded-full transition-all duration-200 flex items-center justify-center gap-2 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:ring-offset-slate-900"
                    aria-label="Return to homepage"
                >
                    <svg
                        class="w-5 h-5"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        aria-hidden="true"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                        ></path>
                    </svg>
                    Back to Home
                </a>
                <a
                    href="/portfolio"
                    class="text-center bg-teal-600 hover:bg-teal-700 active:bg-teal-800 text-white font-bold py-3 px-6 rounded-full transition-all duration-200 flex items-center justify-center gap-2 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:ring-offset-2 focus:ring-offset-slate-900"
                    aria-label="View portfolio"
                >
                    <svg
                        class="w-5 h-5"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        aria-hidden="true"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
                        ></path>
                    </svg>
                    View Portfolio
                </a>
            </div>

            <div class="text-center">
                <a
                    href="/contact"
                    class="text-indigo-400 hover:text-indigo-300 underline text-sm transition-colors duration-200"
                >
                    Or contact me if you need help finding something
                </a>
            </div>
        </article>
    </Section>
</Layout>
