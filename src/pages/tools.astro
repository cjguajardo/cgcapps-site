---
import Layout from "@layouts/Layout.astro";
import ToolCard from "@components/ToolCard.astro";
import { type Tool } from "@types";
import tools from "@data/tools.json";
import Section from "@components/Section.astro";
import Subtitle from "@components/Subtitle.astro";

const description =
    "Free web-based development tools and utilities. Image converter, code formatters, and productivity tools for developers. All tools run locally in your browser - no data upload required.";
---

<Layout title="Developer Tools" description={description}>
    <Subtitle text="Development Tools & Utilities" />
    <div class="text-center mb-8 max-w-2xl mx-auto">
        <p class="text-gray-300 text-lg mb-3">
            A collection of free, privacy-focused tools to make your development
            workflow easier.
        </p>
        <p class="text-gray-400 text-sm mb-2">
            All tools process data locally in your browser - nothing is uploaded
            to any server. Your privacy and security are guaranteed.
        </p>
        <p class="text-indigo-400 text-sm font-semibold">
            More tools are being developed. Check back soon!
        </p>
    </div>

    {
        tools.length > 0 ? (
            <Section name="tools-list">
                <div class="mt-5 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mb-12">
                    {tools.map((tool: Tool) => (
                        <ToolCard tool={tool} />
                    ))}
                </div>
            </Section>
        ) : (
            <Section name="tools-empty">
                <div class="flex flex-col items-center justify-center py-16">
                    <div class="text-7xl mb-6 animate-bounce">üõ†Ô∏è</div>
                    <h2 class="text-3xl font-bold text-indigo-300 mb-4">
                        More Tools Coming Soon
                    </h2>
                    <p class="text-gray-300 text-center max-w-lg mb-4">
                        I'm actively developing new tools to help developers
                        work more efficiently.
                    </p>
                    <div class="bg-indigo-900/20 border border-indigo-500/30 rounded-lg p-6 max-w-md">
                        <h3 class="text-lg font-semibold text-indigo-300 mb-3">
                            Upcoming Tools:
                        </h3>
                        <ul class="text-gray-400 text-sm space-y-2 text-left">
                            <li class="flex items-center gap-2">
                                <span class="text-green-400">‚úì</span>
                                JSON Formatter & Validator
                            </li>
                            <li class="flex items-center gap-2">
                                <span class="text-green-400">‚úì</span>
                                Base64 Encoder/Decoder
                            </li>
                            <li class="flex items-center gap-2">
                                <span class="text-green-400">‚úì</span>
                                Color Picker & Converter
                            </li>
                            <li class="flex items-center gap-2">
                                <span class="text-green-400">‚úì</span>
                                RegEx Tester
                            </li>
                        </ul>
                    </div>
                    <p class="text-gray-500 text-sm mt-6">
                        Want a specific tool?{" "}
                        <a
                            href="/contact"
                            class="text-indigo-400 hover:text-indigo-300 underline"
                        >
                            Let me know!
                        </a>
                    </p>
                </div>
            </Section>
        )
    }
</Layout>
